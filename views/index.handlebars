<h1 class="text-center mb-3">{{title}}</h1>
<h3 class="text-center mb-3">{{subtitle}}</h3>
<form action="/api/person" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="age">Age</label>
            <input type="number" name="age" class="form-control" min="1" max="90">
    </div>
    <div class="form-group">
        <label for="age">Occupation</label>
            <input type="text" name="occupation" class="form-control">
    </div>
    <input type="submit" value="Create Person" class="btn btn-primary btn-block">
</form>
<h5>People</h5>
<ul>
    {{#each people}}
        <li class="list-group-item">{{this.name}} is a {{this.occupation}}</li>
    {{/each}}
</ul>